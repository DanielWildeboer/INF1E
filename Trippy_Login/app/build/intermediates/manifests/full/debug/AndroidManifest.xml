<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trippy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="17" />
    <!-- Allow to connect with internet and to know the current network state -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.trippylogin.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trippylogin.Register"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.trippylogin.Registered"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.trippylogin.Main"
            android:label="Trippy USER PANEL" >
        </activity>
        <activity
            android:name="com.trippylogin.PasswordReset"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.trippylogin.ChangePassword"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>